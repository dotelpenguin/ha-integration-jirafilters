# Jira Configuration Example
# Copy this file to jira.conf and fill in your actual values

# Jira Server/Cloud URL
base_url = https://your-domain.atlassian.net
# For Jira Server: https://your-jira-server.com

# Authentication
# Use API token for Cloud, password for Server
username = your_email@yourdomain.com
api_token = your_jira_api_token_here
# password = your_jira_password_here  # For Jira Server

# Optional
# Whether to verify SSL certificates (set to false only for testing)
verify_ssl = true
# Default max issues to fetch per filter
max_results = 100

# Notes:
# - For Jira Cloud use an API token created from your Atlassian account
# - The script authenticates using basic auth (email + API token)
# - To run: python jira_view_filter.py --filters 12345,67890 --pretty
